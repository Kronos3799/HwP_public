def dekorator(funktion):
    def umwickelte_funktion():
        print("Vor der Ausf端hrung")
        funktion()
        print("Nach der Ausf端hrung")
    return umwickelte_funktion

@dekorator
def hallo():
    print("Hallo!")

def hallo_ohne_decorator():
    print("Hallo!")

print("hallo ohne decorator:")
hallo_ohne_decorator()

print("\nhallo mit decorator:")
hallo()

# Ausgabe:
# Vor der Ausf端hrung
# Hallo!
# Nach der Ausf端hrung